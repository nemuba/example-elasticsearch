<p id="notice"><%= notice %></p>

<%= form_tag(products_path, method: :get, remote: true) do %>
  <%= text_field_tag(:search, params[:search]) %>
  <%= submit_tag("Pesquisar") %>
  <%= link_to 'Listar todos', products_path %>
<% end %>

<h1>Products</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody id="list">
    <%= render @products %>
  </tbody>
</table>

<div id="paginate">
  <%= paginate @products %>
</div>
<br>

<%= link_to 'New Product', new_product_path %>
